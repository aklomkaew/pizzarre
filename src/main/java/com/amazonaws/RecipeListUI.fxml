<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="600.0" maxWidth="600.0" minHeight="600.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amazonaws.RecipeListUI">
   <children>
      <BorderPane maxHeight="600.0" maxWidth="600.0" minHeight="556.0" minWidth="600.0" prefHeight="600.0" prefWidth="600.0">
         <effect>
            <ColorAdjust />
         </effect>
         <top>
            <TitledPane alignment="TOP_RIGHT" prefHeight="14.0" prefWidth="600.0" text="#UserName" BorderPane.alignment="CENTER">
               <content>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="137.0" text="Recipes" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </content></TitledPane>
         </top>
         <bottom>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="backBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" maxHeight="25.0" maxWidth="54.0" minHeight="25.0" minWidth="54.0" mnemonicParsing="false" onAction="#goToManagerUtilities" text="Back">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <effect>
                        <InnerShadow height="10.0" radius="4.5" width="10.0" />
                     </effect>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <left>
            <ScrollPane prefHeight="459.0" prefWidth="267.0" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="474.0" prefWidth="257.0">
                     <children>
                        <TableView fx:id="recipeTableView" prefHeight="474.0" prefWidth="299.0">
                          <columns>
                            <TableColumn fx:id="nameColumn" prefWidth="94.0" text="Recipe Name" />
                            <TableColumn fx:id="ingredientsColumn" prefWidth="102.0" text="Ingredients" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </TableView>
                     </children>
                  </AnchorPane>
              </content>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="10.0" top="25.0" />
               </BorderPane.margin>
            </ScrollPane>
         </left>
         <right>
            <VBox prefHeight="489.0" prefWidth="181.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addRecipeBtn" alignment="CENTER" mnemonicParsing="false" onAction="#addRecipe" prefHeight="55.0" prefWidth="75.0" text="Add Recipe" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="viewRecipeBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#viewRecipe" prefHeight="55.0" prefWidth="75.0" text="View Recipe" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="deleteRecipeBtn" alignment="CENTER" layoutX="20.0" layoutY="95.0" mnemonicParsing="false" onAction="#deleteRecipe" prefHeight="55.0" prefWidth="75.0" text="Delete Recipe" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
               </BorderPane.margin>
            </VBox>
         </right></BorderPane>
   </children>
</AnchorPane>
